        <b>Hệ thống > <a>Cài đặt quản lý học phí ></a> <a style="color: orange; text-decoration: none" asp-action="Index">Ưu đãi</a></b>
    </div>
</form>
<br /><br />
<div class="row g-2">
    <div class="col-md-5">
        <h2>Danh sách ưu đãi</h2>
    </div>
    <div class="col-md-7" style="text-align:right">
        <button style="background: royalblue; border-radius: 7px; height: 50px; width: 120px"><a asp-action="Create" style=" border-radius: 7px;color:white  ;text-decoration: none ">+ Tạo ưu đãi</a></button>
        <button style="background: royalblue; border-radius: 7px; color: white; width: 150px; height: 50px;">
            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Thao Tác</a>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item">Ngừng ưu đãi</a></li>
                <li><a class="dropdown-item">Xóa ưu đãi</a></li>
            </ul>
        </button>
    </div>
    <nav class="navbar navbar-light bg-light">
        <div class="container-fluid">
            <input type="text" class="form-control" placeholder="Tên ưu đãi" aria-label="Tên ưu đãi" style="width: 250px;height:40px; border: 1px solid gray; border-radius: 10px; background: white; color: black; ">
            &nbsp
            <div class="col-md-4">
                <select class="form-select" aria-label="Default select example" style="color: black; width: 250px; height: 40px; border: 1px solid gray; border-radius: 10px;">
                    <option selected>Trạng thái</option>
                    <option value="1">...</option>
                </select>
            </div>&nbsp
            <input type="text" class="form-control" placeholder="Tên ưu đãi" aria-label="Tên ưu đãi" style="width: 250px;height:40px; border: 1px solid gray; border-radius: 10px; background: white; color: black; ">
            <button class="btn btn-group" type="submit" style="background: orange; color: white; width: 100px; border: 1px solid gray; border-radius: 10px;">Tìm Kiếm </button>
        </div>
    </nav>
    <br />
    <table class="table">
        <thead style="background:antiquewhite">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Uudai)
                </th>
                @*<th>
                    @Html.DisplayNameFor(model => model.Loaiuudai)
                </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.Giamhocphi)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Apdung)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Trangthai)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Batdau)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ketthuc)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Uudai)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.Loaiuudai)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Giamhocphi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apdung)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Trangthai)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Batdau)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ketthuc)
                </td>
                <td>
                <td>
                    <nav id="navbar-example2" class="navbar navbar-light bg-light px-3">
                        <a class="navbar-brand" href="#"></a>
                        <ul class="nav nav-pills" style="width:1px;height:auto;text-align:right ">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false"></a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="#scrollspyHeading3">Ngừng ưu đãi</a></li>
                                    @*<li><a class="dropdown-item" asp-action="Details" asp-route-id="@item.Mauudai">Thông Tin Chi Tiết</a></li>
                                    <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Mauudai">Cập Nhật</a></li>*@
                                    <li><a class="dropdown-item" asp-action="Delete" asp-route-id="@item.Mauudai">Delete</a></li>
                                </ul>
                            </li>
                        </ul>
                    </nav>
                </td>
            </tr>
            }
        </tbody>
    </table>
