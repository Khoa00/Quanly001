@model IEnumerable<Thuctap01.Models.ThongbaoModel>

@{
    ViewData["Title"] = "Index";
}
<head>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.9/angular.min.js"></script>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="~/css/bootstrap-3.4.1-dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/bootstrap-3.4.1-dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <script src="~/bootstrap-3.4.1-dist/js/bootstrap.js"></script>
    <script src="~/bootstrap-3.4.1-dist/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<form class="row g-3">
    <div class="col-md-6">
        <b>Thông báo > <a style="color:orange" asp-action="Index">Thông báo của tôi </a></b>
    </div>
</form>
<br />
<br />
<div class="row g-3">
    <nav class="col-md-6">
        <div class="nav nav-tabs" id="nav-tab" role="tablist">
            <button class="nav-link active" id="nav-home-tab" data-bs-toggle="tab" data-bs-target="#nav-home" type="button" role="tab" aria-controls="nav-home" aria-selected="true">Thông báo đến</button>
            <button class="nav-link" id="nav-profile-tab" data-bs-toggle="tab" data-bs-target="#nav-profile" type="button" role="tab" aria-controls="nav-profile" aria-selected="false">Đã gửi</button>
            <button class="nav-link" id="nav-contact-tab" data-bs-toggle="tab" data-bs-target="#nav-contact" type="button" role="tab" aria-controls="nav-contact" aria-selected="false">Lưu tạm</button>
        </div>
    </nav>
    <div class="col-md-6" style="text-align:right">
        <button class="btn btn-primary"  style="height: 45px; width:250px;"><a asp-action="Create" style="color: white; border-radius: 7px; text-decoration: none ">Tạo & gửi thông báo</a></button>
    </div>
</div>
<br />
<div class="tab-content" id="nav-tabContent">
    <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
        <nav class="navbar navbar-light bg-light">
            <div class="container-fluid">
                <input type="text" class="form-control" placeholder="Nhập mã tiêu đề" aria-label="Nhập mã tiêu đề" style="width: 400px;height:40px; border: 1px solid gray; border-radius: 10px; background: white; color: black; ">
                &nbsp
                <input type="text" class="form-control" placeholder="Ngày gửi" aria-label="Ngày gửi" style="width: 400px;height:40px; border: 1px solid gray; border-radius: 10px; background: white; color: black; ">
                <button class="btn btn-group" type="submit" style="background: orange; color: white; width: 150px; border: 1px solid gray; border-radius: 10px;">Tìm Kiếm </button>
            </div>
            
            <table class="table">
                <thead style="background:antiquewhite">
                    <tr>
                        <th>    
                            @Html.DisplayNameFor(model => model.tieude)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Nguoinhan)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.hinhthucgui)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Filedinhkem)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Ngaygui)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Gionhan)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.tieude)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nguoinhan)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.hinhthucgui)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Filedinhkem)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Ngaygui)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Gionhan)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Matieude">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.Matieude">Details</a> |
                                @*<a asp-action="Delete" asp-route-id="@item.Matieude">Delete</a>*@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </nav>
    </div>
    
    <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">...</div>
    <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab">...</div>
</div>

