<div class="row g-2">
    <div class="col-md-5">
        <h2>TỔNG HƠP BẢNG LƯƠNG</h2>
    </div>
    <div class="col-md-7" style="text-align:right">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop" style="background: gray; border-radius: 7px; height: 50px; width: 200px">
            Lập bảng tính lương
        </button>
        <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true" style="text-align:left;width:800px">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="staticBackdropLabel">Thêm bảng tính lương</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label>Mã bảng lương</label>
                            </div>
                            <div class="col-md-8">
                                <input class="form-control" />
                            </div>
                            <div class="col-md-4">
                                <label>Tháng tính lương</label>
                            </div>
                            <div class="col-md-8">
                                <input class="form-control" />
                            </div>
                            <div class="col-md-2">
                                <label>Kì tính lương</label>
                            </div>
                            <div class="col-md-5">
                                <input class="form-control" placeholder="Từ ngày"/>
                            </div>
                            <div class="col-md-5">
                                <input class="form-control" placeholder="Đến ngày"/>
                            </div>
                            <div class="col-md-4">
                                <label>Tên bảng lương</label>
                            </div>
                            <div class="col-md-8">
                                <input class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" style="background:blue">Hủy</button>
                        <button type="button" class="btn btn-primary" style="background:orange">Lưu</button>
                    </div>
                </div>
            </div>
        </div>
        <button style="background: royalblue; border-radius: 7px; color: white; width: 150px; height: 50px;">
            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Xuất Dữ Liệu</a>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item">Xuất XSL</a></li>
                <li><a class="dropdown-item">Xuất CSV</a></li>
            </ul>
        </button>
    </div>
</div>
