@model Thuctap01.Models.MuchocphiModel

@{
    ViewData["Title"] = "Create";
}

<h4>Thêm Mức Học Phí</h4>
<hr />
<form class="row g-3" asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="col-md-6">
        <label asp-for="Khoakhoi" class="control-label"></label>
        <input asp-for="Khoakhoi" class="form-control" />
        <span asp-validation-for="Khoakhoi" class="text-danger"></span>
    </div>
    <div class="col-md-3">
        <label asp-for="mucthu" class="control-label"></label>
        <input asp-for="mucthu" class="form-control" />
        <span asp-validation-for="mucthu" class="text-danger"></span>
    </div>
    <div class="col-md-3">
        <label asp-for="nienkhoa" class="control-label"></label>
        <input asp-for="nienkhoa" class="form-control" />
        <span asp-validation-for="nienkhoa" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="Donvitinh" class="control-label"></label>
        <select asp-for="Donvitinh" class="form-control">
            <option>...</option>
            <option>Tiết Học</option>
            <option>Tín Chỉ</option>
        </select>
        <span asp-validation-for="Donvitinh" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Monhoc" class="control-label"></label>
        <input asp-for="Monhoc" class="form-control" />
        <span asp-validation-for="Monhoc" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="ThoiLuong" class="control-label"></label>
        <input asp-for="ThoiLuong" class="form-control" />
        <span asp-validation-for="ThoiLuong" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="Trangthai" class="control-label"></label>
        <select asp-for="Trangthai" class="form-control">
            <option>...</option>
            <option>Chưa Áp Dụng</option>
            <option>Áp Dụng Ngay</option>
            <option>Ngừng Áp Dụng</option>
        </select>
        <span asp-validation-for="Trangthai" class="text-danger"></span>
    </div>
    <div class="col-md-12">
        <label class="visually-hidden" for="autoSizingInputGroup"  asp-for="Tonghocphi"></label>
        <div class="input-group">
            <input type="text" id="autoSizingInputGroup" asp-for="Tonghocphi" class="form-control">
            <div class="input-group-text">VNĐ</div>
            <span asp-validation-for="Tonghocphi" class="text-danger"></span>
        </div>
    </div>
    <div class="col-1">
        <input type="submit" value="Lưu" class="btn btn-primary" style="color: white; background: orangered;width:93px"/>
    </div>
    <div class="col-2">
        <a asp-action="Index" class="btn btn-primary">Quay Lại</a>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
